@code {

    protected override void OnInitialized()
    {
        // Initialize the UserInfo object with some default data
        if (userInfo != null)
        {
            userInfo.FirstName = "John";
            userInfo.LastName = "Doe";
            userInfo.Address = "123 Elm St";
            userInfo.City = "Springfield";
            userInfo.State = "IL";
            userInfo.CellNumber = "555-1234";
        }

        // You can perform additional logic here if necessary
        base.OnInitialized(); // Call the base method
    }

